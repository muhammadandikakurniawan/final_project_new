@model FinalProject.Models.TB_CANDIDATE
@section title{
    @ViewBag.DataView["title"]
    <link href="~/Content/formcandidate/css/style.css" rel="stylesheet" />
    <link href="~/Content/formcandidate/vendor/date-picker/css/datepicker.min.css" rel="stylesheet" />
}

@section content{
    <div>

        @using (Html.BeginForm("Preselection", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div id="wizard" class="form_wizard wizard_horizontal">
                <ul class="wizard_steps">
                    <li>
                        <a data-toggle="tab" href="#data">
                            <span class="step_no">1</span>
                            <span class="step_descr">
                                Step 1<br />
                                <small>Step 1 Personal Information</small>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#education">
                            <span class="step_no">2</span>
                            <span class="step_descr">
                                Step 2<br />
                                <small>Step 2 Education</small>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#experience">
                            <span class="step_no">3</span>
                            <span class="step_descr">
                                Step 3<br />
                                <small>Step 3 Experiences</small>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#skill">
                            <span class="step_no">4</span>
                            <span class="step_descr">
                                Step 4<br />
                                <small>Step 4 Candidate Skill</small>
                            </span>
                        </a>
                    </li>
                </ul>

            </div>
            <!-- End SmartWizard Content -->


            <div class="row">

                <div class="tab-content">
                    <div id="data" class="tab-pane fade in active">
                        <div class="col-lg-4 col-md-4  col-sm-12">
                            <div class="form-group">
                                @Html.Label("Candidate ID", new { @class = "title control-label" })

                                <input type="text" name="CandidateDetails.CandidateId" value="" readonly="readonly" class="form-control" />

                            </div>
                            <div class="form-group">
                                @Html.Label("Full Name", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_NAME, new { @class = "form-control" })


                            </div>
                            <div class="form-group">
                                @Html.Label("Call Name", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_NAME, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Gender", new { @class = "title control-label" })

                                @Html.DropDownListFor(c => c.CANDIDATE_NAME, new SelectList(new List<string> { "P", "L" }), new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Place Of Birth", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_PLACEBIRTH, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Date Of Birth", new { @class = "title control-label" })
                                @Html.TextBoxFor(c => c.CANDIDATE_BIRTH, null, new { @class = "form-control", @type = "date" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Religion", new { @class = "title control-label" })

                                @Html.DropDownListFor(c => c.CANDIDATE_ETNIC, new SelectList(new List<string> { "Islam", "Kristen", "Katolik", "Budha", "Hindu", "Kong Hu Cu" }), new { @class = "form-control" })

                            </div>

                            <div class="form-group">
                                <label for="file">Upload Image:</label>
                                <input type="file" name="CandidateDetails.GambarFile" id="filefoto" accept="image/png, image/jpeg, image/jpg" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4  col-sm-12">
                            <div class="form-group">
                                @Html.Label("Address", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_CURRENT_ADDRESS, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Parent's Address", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_CURRENT_ADDRESS, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Telephone Number", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_HOMENUMBER, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Email", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_EMAIL, null, new { @class = "form-control", @type = "email" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Phone Number", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_PHONENUMBER, null, new { @class = "form-control", @type = "number" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Resident Card Number", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_KTP_NUMBER, null, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Zip Code", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDDIATE_NPWP_NUMBER, null, new { @class = "form-control", @type = "number" })

                            </div>

                            <div class="form-group">
                                <label for="file">Upload CV:</label>
                                <input type="file" name="CandidateDetails.CvFile" id="CV" accept=".pdf,.docx" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-group">
                                @Html.Label("Martial Status", new { @class = "title control-label" })

                                @Html.DropDownListFor(c => c.CANDIDATE_MARITALSTATUS, new SelectList(new List<string> { "Lajang", "Menikah" }), new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Position", new { @class = "title control-label" })

                                <select>
                                    <option>.Net Developer</option>
                                    <option>Java Developer</option>
                                    <option>Php Developer</option>
                                </select>
                            </div>
                            <div class="form-group">
                                @Html.Label("Recomendation", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_SUITABLE_POTITION, new { @class = "form-control" })


                            </div>
                            <div class="form-group">
                                @Html.Label("Source ID", new { @class = "title control-label" })

                                <select>
                                    <option>JobStreet</option>
                                    <option>JobDB</option>
                                    <option>JobID</option>
                                </select>
                            </div>
                            <div class="form-group">
                                @Html.Label("NPWP", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDDIATE_NPWP_NUMBER, null, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Avaiable Join", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_APPLIED_POTITION, null, new { @class = "form-control", @type = "date" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Expected Salary", new { @class = "title control-label" })

                                @Html.TextBoxFor(c => c.CANDIDATE_EXPECTED_SALARY, null, new { @class = "form-control", @type = "number" })
                            </div>

                            <div class="form-group">
                                @Html.Label("Notes", new { @class = "title control-label" })

                                @Html.TextAreaFor(c => c.CANDIDATE_NAME, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div id="education" class="tab-pane">
                        <label class="col-lg-2 col-md-2 col-sm-12">University / School</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_NAME, null, new { @class = "form-control" })
                        </div>

                        <label class="col-lg-2 col-md-2 col-sm-12">Major</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_MAJOR, null, new { @class = "form-control" })
                            <br />
                        </div>

                        <label class="col-lg-2 col-md-2 col-sm-12">Degree</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_DEGREE, null, new { @class = "form-control" })
                        </div>

                        <label class="col-lg-2 col-md-2 col-sm-12">GPA</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_GPA, null, new { @class = "form-control" })
                            <small style="color: darkgoldenrod">Gunakan koma (,)</small>
                            <br />
                        </div>

                        <label class="col-lg-2 col-md-2 col-sm-12">Start Date</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_MAJOR, null, new { @class = "form-control", @type = "Month" })
                        </div>

                        <label class="col-lg-2 col-md-2 col-sm-12">End Date</label>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            @Html.TextBoxFor(model => model.CANDIDATE_SCHOOL_MAJOR, null, new { @class = "form-control", @type = "Month" })
                            <br />

                        </div>
                    </div>
                    <div id="experience" class="tab-pane">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                <label for="Company Name">Company Name</label>
                                @Html.EditorFor(model => model.TB_JOB_EXPERIENCED, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TB_JOB_EXPERIENCED, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.TB_JOB_EXPERIENCED, new { htmlAttributes = new { @class = "form-control" } })

                            </div>

                            <div class="form-group">
                                <label>Position</label>
                                <select>
                                    <option>...</option>
                                    <option>...</option>
                                    <option>...</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Jobs Desc</label>
                                @Html.TextAreaFor(model => model.TB_JOB_EXPERIENCED, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Skill</label>
                                @Html.TextAreaFor(model => model.TB_JOB_EXPERIENCED, new { @class = "form-control" })
                                <small style="color: darkgoldenrod">Gunakan koma(,) untuk memisahkan</small>

                            </div>

                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">

                                <label>Start Date</label>
                                @Html.EditorFor(model => model.TB_JOB_EXPERIENCED, new { htmlAttributes = new { @class = "form-control", @type = "Month" } })

                            </div>

                            <div class="form-group">
                                <label>End Date</label>
                                @Html.EditorFor(model => model.TB_JOB_EXPERIENCED, new { htmlAttributes = new { @class = "form-control", @type = "Month" } })

                            </div>

                            <div class="form-group">
                                <label for="salary">Salary</label>
                                @Html.TextBoxFor(model => model.CANDIDATE_EXPECTED_SALARY, new { @class = "form-control", @type = "number" })
                            </div>
                            <div class="form-group">
                                <label for="project">Project</label>
                                @Html.TextAreaFor(model => model.CANDIDATE_EXPECTED_SALARY, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Benefit</label>
                                @Html.TextAreaFor(model => model.CANDIDATE_EXPECTED_SALARY, new { @class = "form-control" })
                                <small style="color: darkgoldenrod">Gunakan koma(,) untuk memisahkan</small>
                            </div>
                        </div>
                    </div>

                    @*File Skill*@
                    <div id="skill" class="tab-pane">
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-9">
                                <table class="table table-striped table-responsive table-bordered" id="candidateTable">
                                    <thead>
                                        <tr>
                                            <th class="text-center">No</th>
                                            <th class="text-center">Skill Name</th>
                                            <th class="text-center">Checkbox</th>
                                        </tr>
                                    </thead>
                                    @{
                                        List<SelectListItem> check = new List<SelectListItem>();
                                        int i = 0;
                                        foreach (SelectListItem hasil in check)
                                        {
                                            i = i + 1;
                                            <tr>
                                                <td class="text-center">@i.</td>
                                                <td class="text-center">
                                                    <label class="form-check-label" for="cbskill">@hasil.Text</label>
                                                </td>
                                                <td class="text-center" width="1px">
                                                    <input class="form-check-input" type="checkbox" value="@hasil.Value" id="cbskill" name="cbskill" />
                                                </td>

                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <input class="btn btn-info pull-right" type="submit" value="Create" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <hr class="bg-blue" />

            <br />

        }

    </div>
}